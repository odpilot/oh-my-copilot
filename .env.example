# ═══════════════════════════════════════════════════════════
# BYOK - Bring Your Own Key
# ═══════════════════════════════════════════════════════════

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini
GOOGLE_API_KEY=AIza-...

# Azure OpenAI
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=https://xxx.openai.azure.com

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434

# GitHub Copilot SDK
GITHUB_COPILOT_API_KEY=...

# ═══════════════════════════════════════════════════════════
# Default Settings
# ═══════════════════════════════════════════════════════════
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4o-mini

# Development mode (use Mock SDK)
USE_MOCK_SDK=false

# ═══════════════════════════════════════════════════════════
# Legacy Configuration (kept for backwards compatibility)
# ═══════════════════════════════════════════════════════════

# GitHub Token (for legacy support)
GITHUB_TOKEN=your_github_token_here
COPILOT_API_KEY=your_copilot_api_key_here

# Database
DB_PATH=./data/tasks.db

# Web UI
WEB_PORT=3000
WEB_HOST=localhost

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/oh-my-copilot.log

# Cost Tracking
TRACK_COSTS=true

# Model Configuration
DEFAULT_ARCHITECT_MODEL=gpt-4o
DEFAULT_EXECUTOR_MODEL=gpt-4o-mini
DEFAULT_QA_MODEL=gpt-4o-mini
DEFAULT_SECURITY_MODEL=gpt-4o
DEFAULT_DESIGNER_MODEL=gpt-4o

